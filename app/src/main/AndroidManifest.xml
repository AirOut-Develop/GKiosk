<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-feature android:name="android.hardware.camera.any" android:required="false" />

    <application
        android:name=".GKioskApp"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.GKiosk"
        android:networkSecurityConfig="@xml/network_security_config"
        tools:targetApi="31">

        <activity
            android:name=".ComponentPreview"
            android:exported="false"
            android:label="ComponentPreview" />
        <activity
            android:name=".ApiDebugActivity"
            android:exported="false"
            android:label="API Debug" />

        <activity
            android:name=".ProductListActivity"
            android:exported="false"
            android:label="Product List" />

        <activity
            android:name=".ProductPurchaseActivity"
            android:exported="false"
            android:label="Purchase" />

        <activity
            android:name=".CardPaymentActivity"
            android:exported="false"
            android:label="Card Payment" />

        <activity
            android:name=".Init_Category"
            android:exported="false"
            android:label="@string/init_category_title" />

        <activity
            android:name=".Init_Splash"
            android:exported="true"
            android:label="Init_Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>

</manifest>
