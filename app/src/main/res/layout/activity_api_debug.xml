<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Config + Singleton State -->
        <com.google.android.material.card.MaterialCardView
            style="@style/Widget.GKiosk.Card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Config (BaseUrl / StoreCode / DeviceCode)"
                    style="@style/TextAppearance.GKiosk.SectionTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:id="@+id/et_base_url"
                    android:hint="https://hub.airout.kr:8800"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:id="@+id/et_ws_endpoint"
                    android:hint="wss://example/ws"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:id="@+id/et_store_code"
                    android:hint="Store code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:id="@+id/et_device_code"
                    android:hint="Device code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp">
                    <Button
                        android:id="@+id/btn_apply_config"
                        android:text="Apply"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <Button
                        android:id="@+id/btn_refresh_singleton"
                        android:text="Refresh State"
                        android:layout_marginStart="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <Button
                        android:id="@+id/btn_clear_cart_singleton"
                        android:text="Clear Cart"
                        android:layout_marginStart="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <!-- 사업자번호 조회 및 체인 실행 -->
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp">
                    <EditText
                        android:id="@+id/et_company_number"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Company Number (사업자번호)"
                        android:inputType="number"
                        android:digits="0123456789"
                        android:text="5768803216"/>
                    <Button
                        android:id="@+id/btn_call_store_by_company"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="GET /store/company/{no}"/>
                    <Button
                        android:id="@+id/btn_chain_company_devices_products"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="체인 실행"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/tv_singleton_state"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textSize="12sp"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- API Call + Raw JSON -->
        <com.google.android.material.card.MaterialCardView
            style="@style/Widget.GKiosk.Card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp">
            <LinearLayout
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="API Calls (raw JSON)"
                    style="@style/TextAppearance.GKiosk.SectionTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp">
                    <Button
                        android:id="@+id/btn_call_store"
                        android:text="GET /store/{code}"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <Button
                        android:id="@+id/btn_call_devices"
                        android:text="GET /store/{code}/devices"
                        android:layout_marginStart="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <Button
                        android:id="@+id/btn_call_products"
                        android:text="GET /device/{DeviceCode}/products"
                        android:layout_marginStart="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/tv_request_json"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="@color/white_2"
                    android:padding="8dp"
                    android:textSize="12sp"
                    android:scrollbars="vertical"/>
                <TextView
                    android:id="@+id/tv_api_json"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="@color/white_2"
                    android:padding="8dp"
                    android:textSize="12sp"
                    android:layout_marginTop="8dp"
                    android:scrollbars="vertical"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Assignment Status -->
        <com.google.android.material.card.MaterialCardView
            style="@style/Widget.GKiosk.Card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp">
            <LinearLayout
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Assignment Status"
                    style="@style/TextAppearance.GKiosk.SectionTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tv_assign_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
