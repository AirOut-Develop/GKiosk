<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/space_l"
    tools:context=".ComponentPreview"
    tools:theme="@style/Theme.GKiosk">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:clipToPadding="false">

        <!-- Page Title -->
        <TextView
            android:id="@+id/view_page_title"
            style="@style/TextAppearance.GKiosk.Headline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/components_preview"
            android:paddingBottom="@dimen/space_m" />

        <!-- Section: Theme Toggle -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/view_section_theme"
            style="@style/Widget.GKiosk.Card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/space_m">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/space_m">
                <!-- Theme row: label + switch -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        style="@style/TextAppearance.GKiosk.SectionTitle"
                        android:text="@string/section_theme"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/view_theme_toggle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/dark"
                        android:textOn="@string/dark"
                        android:textOff="@string/light"
                        app:useMaterialThemeColors="true" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <!-- Language selection -->
                    <TextView
                        style="@style/TextAppearance.GKiosk.SectionTitle"
                        android:text="@string/section_language"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>

                    <RadioGroup
                        android:id="@+id/view_language_group"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingStart="@dimen/space_0"
                        android:paddingEnd="@dimen/space_0">

                        <com.google.android.material.radiobutton.MaterialRadioButton
                            android:id="@+id/view_lang_ko"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/language_korean"
                            app:useMaterialThemeColors="true" />

                        <com.google.android.material.radiobutton.MaterialRadioButton
                            android:id="@+id/view_lang_en"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/space_m"
                            android:text="@string/language_english"
                            app:useMaterialThemeColors="true" />
                    </RadioGroup>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>


        <!-- Section: Text -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/view_section_text"
            style="@style/Widget.GKiosk.Card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/space_m">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/space_m">

                <TextView
                    style="@style/TextAppearance.GKiosk.SectionTitle"
                    android:text="@string/section_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    style="@style/TextAppearance.GKiosk.Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_s"
                    android:text="@string/demo_title" />

                <TextView
                    style="@style/TextAppearance.GKiosk.SubTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/demo_subtitle" />

                <TextView
                    style="@style/TextAppearance.GKiosk.Body"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/demo_body" />

                <TextView
                    style="@style/TextAppearance.GKiosk.Caption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/demo_caption" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Section: Buttons -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/view_section_buttons"
            style="@style/Widget.GKiosk.Card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/space_m">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/space_m">

                <TextView
                    style="@style/TextAppearance.GKiosk.SectionTitle"
                    android:text="@string/section_buttons"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_s"
                    android:orientation="horizontal">

                    <!-- Left column: existing 3 buttons -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/view_btn_primary"
                            style="@style/Widget.GKiosk.PrimaryButton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/btn_primary" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/view_btn_outlined"
                            style="@style/Widget.GKiosk.OutlinedButton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/space_s"
                            android:text="@string/btn_outlined" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/view_btn_disabled"
                            style="@style/Widget.GKiosk.PrimaryButton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/space_s"
                            android:enabled="false"
                            android:text="@string/btn_disabled" />
                    </LinearLayout>

                    <!-- Right column: extra buttons -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingStart="@dimen/space_s"
                        android:clipChildren="false">

                        <!-- Row 1: Add / Remove (outlined circular) -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageButton
                                android:id="@+id/btn_add"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:background="@drawable/bg_circle_fill_black2"
                                android:foreground="?attr/selectableItemBackgroundBorderless"
                                android:padding="12dp"
                                android:scaleType="center"
                                android:src="@drawable/ic_add"
                                android:contentDescription="@string/cd_add"
                                app:tint="@android:color/white" />

                            <ImageButton
                                android:id="@+id/btn_remove"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:layout_marginStart="@dimen/space_s"
                                android:background="@drawable/bg_circle_fill_black2"
                                android:foreground="?attr/selectableItemBackgroundBorderless"
                                android:padding="12dp"
                                android:scaleType="center"
                                android:src="@drawable/ic_remove"
                                android:contentDescription="@string/cd_remove"
                                app:tint="@android:color/white" />
                        </LinearLayout>

                        <!-- Row 2: Add Shopping Cart (filled) / Cancel (outlined) -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/space_s"
                            android:orientation="horizontal">

                            <ImageButton
                                android:id="@+id/btn_add_cart"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:background="@drawable/bg_circle_fill_black2"
                                android:foreground="?attr/selectableItemBackgroundBorderless"
                                android:padding="12dp"
                                android:scaleType="center"
                                android:src="@drawable/ic_add_shopping_cart"
                                android:contentDescription="@string/cd_add_to_cart"
                                app:tint="@android:color/white" />

                            <ImageButton
                                android:id="@+id/btn_cancel"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:layout_marginStart="@dimen/space_s"
                                android:background="@drawable/bg_circle_fill_red3"
                                android:foreground="?attr/selectableItemBackgroundBorderless"
                                android:padding="12dp"
                                android:scaleType="center"
                                android:src="@drawable/ic_cancel"
                                android:contentDescription="@string/cd_cancel"
                                app:tint="@android:color/white" />
                        </LinearLayout>

                        <!-- Row 3: Delete Forever / Remove Shopping Cart (outlined red) -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/space_s"
                            android:orientation="horizontal">

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btn_cart_remove"
                                style="@style/Widget.GKiosk.OutlinedButton.Red"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/space_s"
                                android:text="@string/btn_clear_cart"
                                app:icon="@drawable/ic_delete_forever"
                                android:textFontWeight="700"
                                app:iconGravity="textStart" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Section: Amount -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/view_section_amount"
            style="@style/Widget.GKiosk.Card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/space_m">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/space_m">

                <TextView
                    style="@style/TextAppearance.GKiosk.SectionTitle"
                    android:text="@string/section_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/view_amount_primary"
                    style="@style/TextAppearance.GKiosk.Amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_s"
                    android:text="@string/price_sample" />

                <TextView
                    android:id="@+id/view_amount_subtle"
                    style="@style/TextAppearance.GKiosk.SubTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black_3"
                    android:text="@string/vat_included" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Section: Card View -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/view_section_card"
            style="@style/Widget.GKiosk.Card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/space_m">

                <TextView
                    style="@style/TextAppearance.GKiosk.SectionTitle"
                    android:text="@string/section_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    style="@style/TextAppearance.GKiosk.Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_s"
                    android:text="@string/section_card_title" />

                <TextView
                    style="@style/TextAppearance.GKiosk.Body"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/section_card_body" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Section: Cards with Images (various ratios) -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/view_section_media_cards"
            style="@style/Widget.GKiosk.Card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_m">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/space_m">

                <TextView
                    style="@style/TextAppearance.GKiosk.SectionTitle"
                    android:text="@string/section_cards_with_images"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:id="@+id/product_view_section"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_m"
                    android:clipChildren="false">

                    <androidx.gridlayout.widget.GridLayout
                        android:id="@+id/product_item_list"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:alignmentMode="alignMargins"
                        app:columnCount="4"
                        app:rowOrderPreserved="false"
                        app:useDefaultMargins="true">

                        <!-- 2 rows x 4 columns using include of item_product_card -->
                        <include
                            android:id="@+id/card_inc_1"
                            layout="@layout/item_product_card"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            app:layout_columnWeight="1" />

                        <include
                            android:id="@+id/card_inc_2"
                            layout="@layout/item_product_card"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            app:layout_columnWeight="1" />

                        <include
                            android:id="@+id/card_inc_3"
                            layout="@layout/item_product_card"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            app:layout_columnWeight="1" />

                        <include
                            android:id="@+id/card_inc_4"
                            layout="@layout/item_product_card"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            app:layout_columnWeight="1" />

                        <include
                            android:id="@+id/card_inc_5"
                            layout="@layout/item_product_card"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            app:layout_columnWeight="1" />

                        <include
                            android:id="@+id/card_inc_6"
                            layout="@layout/item_product_card"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            app:layout_columnWeight="1" />

                        <include
                            android:id="@+id/card_inc_7"
                            layout="@layout/item_product_card"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            app:layout_columnWeight="1" />

                        <include
                            android:id="@+id/card_inc_8"
                            layout="@layout/item_product_card"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            app:layout_columnWeight="1" />

                    </androidx.gridlayout.widget.GridLayout>

                    <LinearLayout
                        android:id="@+id/product_cart_list"
                        android:layout_width="220dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:clipChildren="false"
                        android:paddingStart="@dimen/space_0">

                        <include
                            android:id="@+id/cart_inc_1"
                            layout="@layout/item_product_card_qty" />
                        <include
                            android:id="@+id/cart_inc_2"
                            layout="@layout/item_product_card_qty" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Section: Tabs (Category + Items Grid) -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/view_section_tabs"
            style="@style/Widget.GKiosk.Card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_m">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/space_m">

                <TextView
                    style="@style/TextAppearance.GKiosk.SectionTitle"
                    android:text="@string/section_tabs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <!-- Category Tabs: Horizontal toggle group -->
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_s"
                    android:fillViewport="false"
                    android:scrollbars="none">
                    <com.google.android.material.button.MaterialButtonToggleGroup
                        android:id="@+id/view_category_tabs"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:singleSelection="true"
                        app:selectionRequired="true">
                        <!-- Preview-only placeholders -->
                        <com.google.android.material.button.MaterialButton
                            style="@style/Widget.GKiosk.TabButton.BW"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            tools:visibility="visible"
                            android:text="전체"/>
                        <com.google.android.material.button.MaterialButton
                            style="@style/Widget.GKiosk.TabButton.BW"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            tools:visibility="visible"
                            android:text="카테고리A"/>
                        <com.google.android.material.button.MaterialButton
                            style="@style/Widget.GKiosk.TabButton.BW"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            tools:visibility="visible"
                            android:text="카테고리B"/>
                    </com.google.android.material.button.MaterialButtonToggleGroup>
                </HorizontalScrollView>

                <!-- Subcategory Tags Row (buttons with | separators) -->
                <HorizontalScrollView
                    android:id="@+id/view_subcategory_scroll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_s"
                    android:fillViewport="false"
                    android:scrollbars="none">
                    <LinearLayout
                        android:id="@+id/view_subcategory_container"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >
                        <!-- Preview-only placeholders -->
                        <com.google.android.material.button.MaterialButton
                            style="@style/Widget.GKiosk.PillButton.BW"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            tools:visibility="visible"
                            android:text="전체"/>
                        <com.google.android.material.button.MaterialButton
                            style="@style/Widget.GKiosk.PillButton.BW"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            tools:visibility="visible"
                            android:text="인기"/>
                        <com.google.android.material.button.MaterialButton
                            style="@style/Widget.GKiosk.PillButton.BW"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            tools:visibility="visible"
                            android:text="추천"/>
                    </LinearLayout>
                </HorizontalScrollView>

                <!-- Sort pills row -->
                <HorizontalScrollView
                    android:id="@+id/view_sort_scroll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_s"
                    android:fillViewport="false"
                    android:scrollbars="none">
                    <LinearLayout
                        android:id="@+id/view_sort_container"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >
                        <!-- Preview-only placeholders: text-only nav with pipes -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            tools:visibility="visible"
                            android:text="추천순"
                            android:textStyle="bold"
                            android:textColor="@color/black"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            tools:visibility="visible"
                            android:text="|"
                            android:textColor="@color/text_secondary"
                            android:layout_marginStart="@dimen/space_xs"
                            android:layout_marginEnd="@dimen/space_xs"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            tools:visibility="visible"
                            android:text="판매량 많은순"
                            android:textColor="@color/text_secondary"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            tools:visibility="visible"
                            android:text="|"
                            android:textColor="@color/text_secondary"
                            android:layout_marginStart="@dimen/space_xs"
                            android:layout_marginEnd="@dimen/space_xs"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            tools:visibility="visible"
                            android:text="가격 높은순"
                            android:textColor="@color/text_secondary"/>
                    </LinearLayout>
                </HorizontalScrollView>

                <!-- Items Grid 4x2 -->
                <androidx.gridlayout.widget.GridLayout
                    android:id="@+id/grid_tab_items"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_m"
                    app:alignmentMode="alignMargins"
                    app:columnCount="4"
                    app:rowOrderPreserved="false"
                    app:useDefaultMargins="true" >
                    <!-- Preview-only placeholders (4x2) -->
                    <include
                        android:visibility="gone"
                        tools:visibility="visible"
                        layout="@layout/item_product_card" />
                    <include
                        android:visibility="gone"
                        tools:visibility="visible"
                        layout="@layout/item_product_card" />
                    <include
                        android:visibility="gone"
                        tools:visibility="visible"
                        layout="@layout/item_product_card" />
                    <include
                        android:visibility="gone"
                        tools:visibility="visible"
                        layout="@layout/item_product_card" />
                    <include
                        android:visibility="gone"
                        tools:visibility="visible"
                        layout="@layout/item_product_card" />
                    <include
                        android:visibility="gone"
                        tools:visibility="visible"
                        layout="@layout/item_product_card" />
                    <include
                        android:visibility="gone"
                        tools:visibility="visible"
                        layout="@layout/item_product_card" />
                    <include
                        android:visibility="gone"
                        tools:visibility="visible"
                        layout="@layout/item_product_card" />
                </androidx.gridlayout.widget.GridLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>

</androidx.core.widget.NestedScrollView>
