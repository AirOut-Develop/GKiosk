<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Top 70% content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:orientation="vertical"
        android:padding="@dimen/space_l">

        <!-- Iconic centered title -->
        <TextView
            android:id="@+id/pp_header"
            style="@style/TextAppearance.GKiosk.Title.Large"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="신분증 인증" />

        <!-- Status box for progress/debug -->
        <TextView
            android:id="@+id/pp_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_s"
            android:textSize="12sp"
            android:textColor="@color/text_secondary"
            android:maxLines="5"
            android:scrollbars="vertical" />

        <!-- Product info row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:layout_marginTop="@dimen/space_m"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/pp_image"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:layout_weight="1"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="@dimen/space_m">

                <TextView
                    android:id="@+id/pp_brand"
                    style="@style/TextAppearance.GKiosk.Brand.Large"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="" />

                <TextView
                    android:id="@+id/pp_title"
                    style="@style/TextAppearance.GKiosk.Title.Large"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="" />

                <TextView
                    android:id="@+id/pp_price"
                    style="@style/TextAppearance.GKiosk.Amount.Large"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_s"
                    android:text="" />

                <TextView
                    android:id="@+id/pp_desc"
                    style="@style/TextAppearance.GKiosk.Body"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_s"
                    android:text="" />

            </LinearLayout>
        </LinearLayout>

        <!-- Camera preview (4:3) -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/space_l"
            android:layout_weight="1">

            <androidx.camera.view.PreviewView
                android:id="@+id/pp_preview"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@color/black_1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/pp_btn_back"
                app:layout_constraintDimensionRatio="4:3" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/pp_btn_back"
                style="@style/Widget.GKiosk.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="뒤로가기"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="@dimen/space_m" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

    <!-- Bottom 30% empty spacer -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3" />

</LinearLayout>
