<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:background="@android:color/transparent">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/dialog_card"
        style="@style/Widget.GKiosk.Card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="@dimen/radius_l"
        android:layout_margin="@dimen/space_l"
        app:strokeColor="@android:color/transparent"
        app:strokeWidth="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/space_l">

            <include layout="@layout/view_product_detail_content" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Overlaid close button at top-right, slightly larger -->
    <ImageButton
        android:id="@+id/btn_dialog_close"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_gravity="top|end"
        android:layout_marginTop="@dimen/space_s"
        android:layout_marginEnd="@dimen/space_s"
        android:elevation="2dp"
        android:stateListAnimator="@null"
        android:contentDescription="@string/close"
        android:background="@drawable/bg_circle_fill_red3"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:scaleType="center"
        android:src="@drawable/ic_cancel"
        app:tint="@android:color/white" />

</FrameLayout>
