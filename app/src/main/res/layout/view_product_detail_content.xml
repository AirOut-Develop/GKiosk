<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Top section: image left, texts/controls right -->
    <LinearLayout
        android:id="@+id/section_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <FrameLayout
            android:id="@+id/detail_image_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="0dp"
            android:layout_marginEnd="@dimen/space_m">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/detail_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                />

        </FrameLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="@dimen/space_m">

            <TextView
                android:id="@+id/detail_brand"
                style="@style/TextAppearance.GKiosk.Brand.Large"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_l"
                android:text="BRAND" />

            <TextView
                android:id="@+id/detail_title"
                style="@style/TextAppearance.GKiosk.Title.Large"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="제품명 예시" />

            <TextView
                android:id="@+id/detail_desc"
                style="@style/TextAppearance.GKiosk.Body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_xs"
                android:text="상세 설명이 여기에 표시됩니다." />

            <!-- Product tags below description -->
            <com.google.android.material.chip.ChipGroup
                android:id="@+id/detail_tags"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_s"
                app:singleLine="false"
                app:singleSelection="false"
                app:chipSpacingHorizontal="8dp"
                app:chipSpacingVertical="8dp" />

            <TextView
                android:id="@+id/detail_price"
                style="@style/TextAppearance.GKiosk.Amount.Large"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_l"
                android:text="₩ 0" />

            <!-- Quantity row -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_l"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/detail_qty_minus"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/bg_circle_outlined"
                    android:foreground="?attr/selectableItemBackgroundBorderless"
                    android:padding="12dp"
                    android:scaleType="center"
                    android:src="@drawable/ic_minus"
                    android:contentDescription="@string/cd_qty_minus"
                    app:tint="?attr/colorOnSurface" />

                <TextView
                    android:id="@+id/detail_qty_text"
                    style="@style/TextAppearance.GKiosk.Title.Large"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/space_m"
                    android:layout_marginEnd="@dimen/space_m"
                    android:text="1" />

                <ImageButton
                    android:id="@+id/detail_qty_plus"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/bg_circle_outlined"
                    android:foreground="?attr/selectableItemBackgroundBorderless"
                    android:padding="12dp"
                    android:scaleType="center"
                    android:src="@drawable/ic_plus"
                    android:contentDescription="@string/cd_qty_plus"
                    app:tint="?attr/colorOnSurface" />
            </LinearLayout>

            <!-- Action buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_xl"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_buy_now"
                    style="@style/Widget.GKiosk.PrimaryButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/btn_buy_now"
                    android:textSize="27sp"
                    android:minHeight="72dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_add_to_cart"
                    style="@style/Widget.GKiosk.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/space_m"
                    android:text="@string/btn_add_to_cart"
                    android:textSize="27sp"
                    android:minHeight="72dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- Bottom section: image detail area (scrollable inside fixed ratio area) -->
    <ScrollView
        android:id="@+id/detail_image_scroll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="@dimen/space_l"
        android:fillViewport="true"
        android:scrollbars="none">

        <FrameLayout
            android:id="@+id/detail_image_large_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/detail_image_large"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitStart"
                android:contentDescription="@string/cd_product_image" />

        </FrameLayout>
    </ScrollView>

</LinearLayout>
