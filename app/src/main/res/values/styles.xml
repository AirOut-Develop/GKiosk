<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Text appearances for consistent typography -->
    <style name="TextAppearance.GKiosk.Headline" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextAppearance.GKiosk.Title" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.GKiosk.Body" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="TextAppearance.GKiosk.SubTitle" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="TextAppearance.GKiosk.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">@color/text_caption</item>
    </style>

    <style name="TextAppearance.GKiosk.SectionTitle" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:letterSpacing">0.02</item>
    </style>

    <style name="TextAppearance.GKiosk.Amount" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="TextAppearance.GKiosk.AmountCart" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">24sp</item>
    </style>

    <!-- Brand label (slightly larger than caption) -->
    <style name="TextAppearance.GKiosk.Brand" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">11sp</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <!-- Buttons -->
    <style name="Widget.GKiosk.PrimaryButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/primary_main</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">12dp</item>
        <item name="rippleColor">@color/primary_lighter</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="Widget.GKiosk.OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="strokeColor">@color/primary_main</item>
        <item name="strokeWidth">2dp</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:textColor">@color/primary_main</item>
        <item name="rippleColor">@color/primary_darker</item>
        <!-- Match Primary button height/insets -->
        <item name="android:minHeight">48dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <!-- Icon-only circular buttons -->
    <style name="Widget.GKiosk.IconButton.Primary" parent="Widget.MaterialComponents.Button.Icon">
        <item name="backgroundTint">@color/primary_main</item>
        <item name="cornerRadius">24dp</item>
        <item name="android:padding">0dp</item>
        <item name="iconPadding">0dp</item>
        <item name="iconTint">@android:color/white</item>
        <item name="iconSize">24dp</item>
        <item name="android:gravity">center</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="Widget.GKiosk.IconButton.Outlined" parent="Widget.MaterialComponents.Button.Icon">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="strokeColor">@color/primary_main</item>
        <item name="strokeWidth">2dp</item>
        <item name="cornerRadius">24dp</item>
        <item name="android:padding">0dp</item>
        <item name="iconPadding">0dp</item>
        <item name="iconTint">@color/primary_main</item>
        <item name="iconSize">24dp</item>
        <item name="android:gravity">center</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <!-- Outlined red accent button for dangerous actions -->
    <style name="Widget.GKiosk.OutlinedButton.Red" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="strokeColor">@color/red_0</item>
        <item name="strokeWidth">2dp</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:textColor">@color/red_0</item>
        <item name="iconTint">@color/red_0</item>
        <item name="iconPadding">8dp</item>
        <item name="rippleColor">@color/red_0</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <!-- Cards -->
    <style name="Widget.GKiosk.Card" parent="Widget.MaterialComponents.CardView">
        <item name="cardUseCompatPadding">true</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="strokeColor">@color/card_stroke</item>
        <item name="strokeWidth">1dp</item>
        <item name="cardBackgroundColor">?attr/colorSurface</item>
    </style>

    <!-- Shape overlay for top rounded image inside card -->
    <style name="ShapeAppearanceGKioskCardTopOnly">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">@dimen/radius_m</item>
        <item name="cornerSizeTopRight">@dimen/radius_m</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

    <!-- Rounded image shape (no stroke) for detail images -->
    <style name="ShapeAppearanceGKioskImage">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/radius_m</item>
    </style>

    <!-- Larger text variants for product detail -->
    <style name="TextAppearance.GKiosk.Brand.Large" parent="TextAppearance.GKiosk.Brand">
        <item name="android:textSize">30sp</item>
    </style>
    <style name="TextAppearance.GKiosk.Title.Large" parent="TextAppearance.GKiosk.Title">
        <item name="android:textSize">45sp</item>
    </style>
    <style name="TextAppearance.GKiosk.Title.Medium" parent="TextAppearance.GKiosk.Title">
        <item name="android:textSize">36sp</item>
    </style>
    <style name="TextAppearance.GKiosk.Amount.Large" parent="TextAppearance.GKiosk.Amount">
        <item name="android:textSize">54sp</item>
    </style>

    <!-- Compact outlined tag chip for product tags -->
    <style name="Widget.GKiosk.TagChip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="ensureMinTouchTargetSize">false</item>
        <item name="chipMinHeight">22dp</item>
        <item name="chipStartPadding">6dp</item>
        <item name="chipEndPadding">6dp</item>
        <item name="chipStrokeColor">@color/black_2</item>
        <item name="chipStrokeWidth">1.5dp</item>
        <item name="chipBackgroundColor">@color/black_2</item>
        <item name="rippleColor">@color/primary_lighter</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:includeFontPadding">false</item>
        <item name="checkedIconVisible">false</item>
        <item name="chipIconVisible">false</item>
        <item name="android:clickable">false</item>
        <item name="android:checkable">false</item>
    </style>

    <!-- Tab-like segmented button style for category tabs -->
    <style name="Widget.GKiosk.TabButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="cornerRadius">0dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/tab_stroke</item>
        <item name="backgroundTint">@color/tab_bg</item>
        <item name="android:textColor">@color/tab_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:minHeight">60dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="rippleColor">@color/primary_lighter</item>
    </style>

    <!-- Rounded pill for subcategory/sort selections -->
    <style name="Widget.GKiosk.PillButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="cornerRadius">0dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/tab_stroke</item>
        <item name="backgroundTint">@color/tab_bg</item>
        <item name="android:textColor">@color/tab_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:paddingLeft">14dp</item>
        <item name="android:paddingRight">14dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="rippleColor">@color/primary_lighter</item>
    </style>

    <!-- Black&White variants -->
    <style name="Widget.GKiosk.TabButton.BW" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="cornerRadius">0dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/bw_stroke</item>
        <item name="backgroundTint">@color/bw_bg</item>
        <item name="background">@color/bw_bg</item>
        <item name="android:textColor">@color/bw_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:paddingLeft">28dp</item>
        <item name="android:paddingRight">28dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:minHeight">96dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="rippleColor">@color/white_1</item>
    </style>

    <style name="Widget.GKiosk.PillButton.BW" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="cornerRadius">0dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/bw_stroke</item>
        <item name="backgroundTint">@color/bw_bg</item>
        <item name="android:textColor">@color/bw_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:minHeight">44dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="rippleColor">@color/white_1</item>
    </style>
</resources>
